<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.khutsomatlala.hackaton_user11">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.Auth_loginActivity"
            android:label="Co-Working Spaces">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".Activities.AuthActivity" />
        <activity
            android:name=".Activities.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".Activities.bookingActivity"
            android:label="Booking" />
        <activity android:name=".Activities.Splash" />
        <activity
            android:name=".Activities.MainActivity"
            android:label="Co-Working Spaces" />
        <activity android:name=".Activities.MaxPicActivity" />
        <activity
            android:name=".Activities.PlaceDetailsActivity"
            android:label="@string/title_activity_place_details"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activities.ReviewActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Activities.Read_moreActivity" />
        <activity android:name=".Activities.Forgot_Password" />
        <activity
            android:name=".Activities.ProfileActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="Booking History"/>
        <activity android:name=".Activities.ProfileListActivity"
            android:label="Profile"/>

        <activity android:name=".Activities.HostActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="Host Your Space"></activity>
    </application>

</manifest>