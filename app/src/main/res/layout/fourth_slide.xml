        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="#196b69"
            android:text="Please provide us with the following details "/>

        <EditText
            android:id="@+id/edt_phone_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telephone no."
            android:textSize="14dp"
            android:inputType="number"
            android:textColorHint="#50196b69"
            android:background="@drawable/square"
            android:layout_margin="4dp"/>

        <EditText
            android:id="@+id/edt_hours_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Working hrs , eg 7am - 8pm"
            android:textSize="14dp"
            android:textColorHint="#50196b69"
            android:background="@drawable/square"
            android:layout_margin="4dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button


            android:id="@+id/btn_next_forth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="next"
            android:layout_alignParentRight="true"
            android:textColor="#196b69"
            android:background="@android:color/transparent"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>