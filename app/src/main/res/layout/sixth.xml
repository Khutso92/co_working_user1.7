<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<com.santalu.diagonalimageview.DiagonalImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            app:di_borderEnabled="false"
            android:src="@drawable/regus"
            app:di_direction="bottom"
            app:di_overlap="90dp"
            app:di_position="bottom" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="please provide us with 3 pictures"
            android:textColor="#196b69"
            android:layout_marginLeft="4dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_first_pic"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="1st pic"
                android:onClick="upSlidePic"
                android:textColor="#196b69"
                android:layout_margin="4dp"
                android:textAllCaps="false"
                android:background="@drawable/square"/>

            <Button
                android:id="@+id/btn_second_pic"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="2nd pic"
                android:onClick="upSlidePic2"
                android:textColor="#196b69"
                android:layout_margin="4dp"
                android:textAllCaps="false"
                android:background="@drawable/square"/>

            <Button
                android:id="@+id/btn_third_pic"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="3rd pic"
                android:onClick="upSlidePic3"
                android:textColor="#196b69"
                android:layout_margin="4dp"
                android:textAllCaps="false"
                android:background="@drawable/square"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#196b69"
            android:text="please provide us with 3 amenities"
            android:layout_marginLeft="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtFeatT1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:hint="Title"
                android:textColor="#196b69"
                android:layout_margin="4dp"
                android:textAllCaps="false"
                android:background="@drawable/square"/>

            <EditText
                android:id="@+id/edtFeatT2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:hint="Title"
                android:textColor="#196b69"
                android:layout_margin="4dp"
                android:textAllCaps="false"
                android:background="@drawable/square"/>

            <EditText
                android:id="@+id/edtFeatT3"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:hint="Title"
                android:layout_margin="4dp"
                android:textAllCaps="false"
                android:textColor="#196b69"
                android:background="@drawable/square"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_first_amenities"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="1st pic"
                android:onClick="upLoadFeatPic1"
                android:textColor="#196b69"
                android:layout_margin="4dp"
                android:textAllCaps="false"
                android:background="@drawable/square"/>

            <Button
                android:id="@+id/btn_second_amenities"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="2nd pic"
                android:textColor="#196b69"
                android:onClick="upLoadFeatPic2"
                android:layout_margin="4dp"
                android:textAllCaps="false"
                android:background="@drawable/square"/>

            <Button
                android:id="@+id/btn_third_amenities"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:onClick="upLoadFeatPic3"
                android:text="3rd pic"
                android:layout_margin="4dp"
                android:textAllCaps="false"
                android:textColor="#196b69"
                android:background="@drawable/square"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/ImageView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_save_host"
            android:onClick="btnUpload_Click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_alignParentRight="true"
            android:text="save"
            android:textColor="#196b69"
            android:background="@android:color/transparent"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>