<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lv_profile"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="4dp"
    android:orientation="vertical"
    tools:context=".Activities.ProfileActivity">


    <FrameLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_spacePic"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/profileDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_alignParentBottom="true"
                android:textColor="#196b69"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/profilePlaceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/profileDate"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Place Name"
                android:textColor="#196b69"
                android:textSize="14sp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/profileTimeIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileName"
            android:text="Time In"
            android:textColor="#196b69"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/profileTimeOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time Out"
            android:textColor="#196b69"
            android:textSize="14sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/profileNoOfPpl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No of people"
            android:textColor="#196b69"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/profilePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#196b69"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="Total price" />
    </FrameLayout>

</android.support.v7.widget.CardView>
