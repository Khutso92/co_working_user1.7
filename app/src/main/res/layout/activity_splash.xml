     <ImageView
         android:id="@+id/iv"
         android:layout_gravity="center"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:src="@drawable/logo_one"/>


 </LinearLayout>
</RelativeLayout>
